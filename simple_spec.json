{
  "openapi": "3.0.0",
  "info": {
    "title": "Message API",
    "version": "1.0.0"
  },
  "paths": {
    "/message": {
      "get": {
        "summary": "Get message",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "text": {
                      "type": "string",
                      "example": "Hello, World!"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Post message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "New message"
                  }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 2
                    },
                    "text": {
                      "type": "string",
                      "example": "New message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}